<h1><%=@pending_app.name%>'s Application
</h1>
<h2>Status:
  <%= @pending_app.status%></h2>

<h4>Applicant Information:</h4>
<ul>
  <li>Name:
    <%=@pending_app.name %></li>
  <li>Street address:
    <%=@pending_app.street_address %></li>
  <li>City:
    <%=@pending_app.city %></li>
  <li>State:
    <%=@pending_app.state %></li>
  <li>Zipcode:
    <%=@pending_app.zipcode %></li>
  <li>Description:
    <%=@pending_app.description %></li>
</ul>
<h4>Approped Pets</h4>
<div class="approved_pets">
  <% @approved_pets.each do |pet| %>
    <ul>
      <li>Name:
        <%=pet.name %>
      </li>
      <li>Age:
        <%=pet.age %>
      </li>
      <li>Breed:
        <%=pet.breed %>
      </li>
      <li>Shelter:
        <%=pet.shelter_name %>
      </li>
    </ul>
  <% end %>
</div>
<div class="denied_pets">
<h4>Denied Pets</h4>
<% @rejected_pets.each do |pet| %>
  <ul>
    <li>Name:
      <%=pet.name %>
    </li>
    <li>Age:
      <%=pet.age %>
    </li>
    <li>Breed:
      <%=pet.breed %>
    </li>
    <li>Shelter:
      <%=pet.shelter_name %>
    </li>
  </ul>
<% end %>
</div>
<div class="undecided_pets">
<h4>Undecided Pets:
</h4>
<%@undetermined_pets.each do |pet|  %>
  <div id="selected_dog-<%=pet.id%>">
    <ul>
      <li>Name:
        <%=pet.name %>
      </li>
      <li>Age:
        <%=pet.age %>
      </li>
      <li>Breed:
        <%=pet.breed %>
      </li>
      <li>Shelter:
        <%=pet.shelter_name %>
      </li>
    </ul>
    <%=button_to("Approve Pet", "/admin/applications/#{@pending_app.id}/#{pet.id}", :decision => 'approve', params: { descision: :accepted }) %>
    <%=button_to("Reject Pet", "/admin/applications/#{@pending_app.id}/#{pet.id}", params: { descision: :rejected})%>
  <% end %>
  </div>
</div>
